{
  "name": "FaceStache : Facebook Status Machine",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "The fuzzier the face, the more notifications you have waiting on you.",
  "homepage_url": "http://colinwaddell.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "src/options_custom/lib/store.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo"
  },
  "permissions": [
    "https://www.facebook.com/*"
  ]
}
